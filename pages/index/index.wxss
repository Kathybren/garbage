.banner {
  width: 100%;
  height: 315rpx;
}
.container {
  display: flex;
  justify-content: center;
  margin: 0 auto;
  align-items: center;
  margin-top: 30rpx;
  width: 570rpx;
  height: 60rpx;
  background: #f7f7fa;
  border-radius: 30rpx;
  margin-bottom: 30rpx;
}
.container image {
  height: 40rpx;
  width: 40rpx;
}
.container .search {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  color: #b0b3ba;
}
.type {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
  height: 40rpx;
  margin-top: 80rpx;
}
.type .line {
  width: 180rpx;
  height: 4rpx;
  background: #4cbb3f;
}
.type .text {
  margin: 0 20rpx;
  font-size: 40rpx;
  font-family: PingFangSC-Regular;
  color: #292a2e;
}
.card-cont {
  margin-top: 30rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  padding: 0 40rpx;
}
.card-cont .card {
  height: 199rpx;
  width: 199rpx;
  margin-bottom: 30rpx;
}
.card-cont .card image {
  height: 189rpx;
  width: 189rpx;
  border-radius: 20rpx;
}
